        <table>
            <tr>
                <th>Mã Đơn Hàng </th>
                <th>Mã SẢN PHẨM</th>

                <th>SỐ LƯỢNG</th>

                <th>THÀNH TIỀN</th>


            </tr>
            <% CTDonHang.forEach(function(CTDonHang) { %>
                <tr>

                    <td>
                        <%= CTDonHang.MADONHANG %>
                    </td>
                    <td>
                        <%=CTDonHang.MASP %>
                    </td>

                    <td>
                        <%=CTDonHang.SOLUONG %>
                    </td>

                    <td>
                        <%=CTDonHang.THANHTIEN %>
                    </td>






                    <!-- <td>
                        <form action="/xem-sanpham/<%= CTDonHang.MAKHACHHANG %>" method="post"><button>Hủy Đơn
                                Hàng</button>
                        </form>



                    </td> -->
                    <% }); %>


                </tr>









        </table>

    </div>


</body>


</html>
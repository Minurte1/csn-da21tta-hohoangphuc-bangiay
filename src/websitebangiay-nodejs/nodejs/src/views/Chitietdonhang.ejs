    <div class="list-users">

        <table>
            <tr>
                <th>Mã Khách Hàng </th>
                <th>Tên</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>

                <th>Ghi chú</th>

            </tr>
            <% User.forEach(function(User) { %>
                <tr>

                    <td>
                        <%= User.MAKHACHHANG %>

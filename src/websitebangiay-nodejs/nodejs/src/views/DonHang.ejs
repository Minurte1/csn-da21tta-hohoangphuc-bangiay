    <title>HomePage</title>
</head>
<style>

</style>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create Sản Phẩm</a>
        <!-- <a href="/khachhang">Thông Tin Khách Hàng</a> -->
        <a href="/All-donhang">Tất Cả Đơn Hàng</a>
    </div>

    <div class="list-users">

        <table>
            <tr>
                <th>Mã Đơn Hàng </th>
                <th>Mã Khách Hàng</th>

                <th>Thời gian</th>

                <th>Chức Năng</th>


            </tr>
            <% DonHang.forEach(function(DonHang) { %>
                <tr>

                    <td>
                        <%= DonHang.MADONHANG %>
                    </td>
                    <td>
                        <%= DonHang.MAKHACHHANG %>
                    </td>

                    <td>
                        <%= DonHang.formattedTime %>
                    </td>








                    <td>
                        <form action="/xem-chiTietdonhang/<%= DonHang.MADONHANG %>" method="post"><button>Xem
                                thêm</button>
                        </form>



                    </td>

                    <td>
                        <form action="/DeleteDonhang/<%= DonHang.MADONHANG %>" method="post"><button>Hủy Đơn</button>
                        </form>



                    </td>
                    <% }); %>


                </tr>









        </table>

    </div>

</body>


</html>